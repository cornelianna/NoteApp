@model NoteApp.Models.Post

    <div class="container">
        <h2 class="my-4">Edit Post</h2>
        <form asp-action="UpdatePost" method="post" enctype="multipart/form-data" class="p-4 border rounded">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea name="Content" class="form-control" required>@Model.Content</textarea>
        </div>
        
        <div class="form-group mt-3">
            <label for="newImage">Upload New Image (optional)</label>
            <input type="file" name="newImage" accept="image/*" class="form-control" />
        </div>

        <input type="submit" value="Update" class="btn btn-success mt-4" />
        </form>
    </div>
