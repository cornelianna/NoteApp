@model NoteApp.Models.Post
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<div class="view-post-container container mt-5">
    <div class="view-post-flex">
        <!-- Post Section (Left) -->
        <div class="post-content">
            <div class="post-card p-4">
                <!-- Post Header -->
                <div class="post-header d-flex align-items-center mb-4">
                    <div class="user-avatar me-3">
                        <img src="~/images/icon.svg" alt="User Avatar" class="rounded-circle" width="50" height="50">
                    </div>
                    <div>
                        <h5 class="username mb-1">@Model.Username</h5>
                        <small class="text-muted">Posted on @Model.CreatedAt.ToString("g")</small>
                    </div>
                </div>

                <!-- Post Content -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="post-image mb-4">
                        <img src="@Model.ImageUrl" alt="Post Image" class="img-fluid rounded">
                    </div>
                }

                <div class="post-text">
                    <p>@Model.Content</p>
                </div>
            </div>
        </div>

        <!-- Comments Section (Right) -->
        <div class="comments-section">
            <div class="comments-box p-4">
                <h4>Comments</h4>
                <hr>

                <form asp-action="AddComment" method="post" class="comment-form mb-4">
                    <input type="hidden" name="postId" value="@Model.Id" />
                    <textarea class="form-control" name="Content" placeholder="Add a comment" required></textarea>
                    <button type="submit" class="btn btn-primary mt-3">Comment</button>
                </form>

                <div class="existing-comments">
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                    {
                        <div class="comment mb-3 p-3 border rounded">
                            <div class="comment-header d-flex align-items-center mb-2">
                                <div class="user-avatar me-2">
                                    <img src="~/images/icon.svg" alt="User Avatar" width="30" height="30" class="rounded-circle">
                                </div>
                                <div>
                                    <span class="username">@comment.Username</span>
                                    <small class="text-muted ms-2">@comment.CreatedAt.ToString("g")</small>
                                </div>
                            </div>
                            <p class="comment-text mb-1">@comment.Content</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>