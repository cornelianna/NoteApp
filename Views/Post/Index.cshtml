@model List<NoteApp.Models.Post>

<div class="container">
    <h2>Create a new post</h2>
    <div class="create-post-container">
        <!-- Left side for image preview and selecting image -->
        <div class="left-column">
            <div class="image-placeholder" id="imagePreview">
                <span id="imageText">Display selected image</span>
            </div>
            <label for="fileUpload" class="custom-file-upload">
                <img src="~/images/icon.svg" alt="Upload Image Icon" />
                Select Image
            </label>
            <input type="file" id="fileUpload" style="display: none;" onchange="previewImage(event)">
        </div>

        <!-- Right side for writing the note -->
        <div class="right-column">
            <textarea id="noteInput" placeholder="Write note here..."></textarea>
            <button type="submit" class="submit-button">Post</button>
        </div>
    </div>

<h2>Posts</h2>
@foreach (var post in Model)
{
    <div class="post">
        <!-- Left side: Image or Note -->
        <div class="contentPost">
            @if (!string.IsNullOrEmpty(post.ImageUrl))
            {
                <!-- If an image exists, display the image -->
                <div class="contentImg">
                    <img src="@post.ImageUrl" alt="Post image">
                </div>
            }
            else
            {
                <!-- If no image, display the note content here -->
                <div class="noteContent">
                    <p>@post.Content</p>
                </div>
            }
        </div>

        <!-- Right side: Note and Comments -->
        <div class="discussions">
            <!-- Always display the note here, even when there is an image -->
            @if (!string.IsNullOrEmpty(post.ImageUrl))
            {
                <!-- Move note to the comments area if there's an image -->
                <div class="noteContent">
                    <p>@post.Content</p>
                </div>
            }

            <!-- Comments section -->
            <h4>Comments:</h4>
            @foreach (var comment in post.Comments)
            {
                <div class="discussion">
                    <div class="userImg">
                        <img src="~/images/icon.svg" alt="Avatar">
                        <strong>@comment.Username</strong>
                    </div>
                    <div class="comment">
                        <p>@comment.Content</p>
                    </div>
                </div>
            }

            <!-- Comment form -->
            <form asp-action="AddComment" method="post">
                <input type="hidden" name="postId" value="@post.Id" />
                <textarea class="form-control" name="Content" placeholder="Add a comment"></textarea>
                <input class="btn btn-primary" type="submit" value="Comment" />
            </form>
        </div>
    </div>
}