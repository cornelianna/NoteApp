@model NoteApp.Models.Post

<h2>Edit Post</h2>

<form asp-action="EditPost" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea name="Content" class="form-control" required>@Model.Content</textarea>
    </div>
    
    <div class="form-group">
        <label for="newImage">Upload New Image (optional)</label>
        <input type="file" name="newImage" accept="image/*" class="form-control-file" />
    </div>

    <input type="submit" value="Update" class="btn btn-success" />
</form>