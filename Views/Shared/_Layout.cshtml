﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js" defer></script>
  </head>
  <body>
    <!-- Navbar with Toggle button for mobile screens -->
    <nav class="navbar navbar-expand-md navbar-dark">
      <div class="container-fluid">
        <button
          class="navbar-toggler "
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#sidebar"
          aria-controls="sidebar"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>

    <div class="d-flex">
      <!-- Sidebar for larger screens and collapsible for mobile -->
      <div class="sidebar collapse d-md-block " id="sidebar">
        <div class="text-center p-3">
          <a asp-controller="Post" asp-action="Index">
            <img src="~/images/SnapNoteLogo.png" alt="Brand Logo" class="brand-image" />
          </a>
          <!-- Sidebar brand image -->
        </div>

        <ul class="nav flex-column mb-auto">
          @if (SignInManager.IsSignedIn(User))
          {
            <li class="nav-item">
              <a href="#home" class="nav-link text-black">
                <img src="~/images/icon.svg" alt="AvatarImg" />
                @UserManager.GetUserName(User)</a
              >
            </li>
            <li class="nav-item">
              <form class="form-inline nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" id="logoutForm">
                <button type="submit" class="btn btn-link">Logout</button>
              </form>
            </li>
            <li>
              <a class="nav-link text-black" asp-controller="Friends" asp-action="Index">Friends</a>
            </li>
          } 
          else 
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li>
              <a class="nav-link text-black" asp-area="Identity" asp-page="/Account/Login">Friends</a>
            </li>
          }
          <li>
            <a class="nav-link text-black" asp-controller="Settings" asp-action="Index">Settings</a>
          </li>
        </ul>
      </div>

      <!-- Main Content -->
      <div class="main-content container" style="margin-left: 260px;">
        <!-- Adjust the margin-left to account for sidebar's width -->
        @RenderBody()
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
  </body>
</html>