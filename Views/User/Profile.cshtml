@model NoteApp.Models.UserProfileViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = $"{Model.Username}'s Profile";
}

<div class="main-content">
    <!-- User Information -->
    <div class="profile-header mb-4">
        <div class="profile-picture text-center">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle" width="150" height="150" />
        </div>
        <h2 class="text-center mt-3">@Model.Username</h2>
    </div>

    <!-- User's Posts -->
    <h3 class="posts-header">@Model.Username's Posts</h3>

    @if (Model.Posts.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var post in Model.Posts.OrderByDescending(p => p.CreatedAt))
            {
                <div class="col">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" class="card-img-top" alt="Post image">
                        }
                        <div class="card-body">
                            <p class="card-text text-truncate">@post.Content</p>
                            <a href="@Url.Action("ViewPost", "Post", new { id = post.Id })" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>@Model.Username hasn't made any posts yet.</p>
    }
</div>
