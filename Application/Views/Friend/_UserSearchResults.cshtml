@using Microsoft.AspNetCore.Identity
@model IEnumerable<User>
    
@foreach (var user in Model)
{
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="@Url.Action("Profile", "User", new { userId = user.Id })" class="nav-link text-black">
            <img src="~/images/icon.svg" alt="Avatar" style="width: 25px; height: 25px;">
            <span class="username">@user.UserName</span> 
        </a>
        <button class="buttonstandard btn btn-primary btn-sm float-end add-friend-btn" data-friend-id="@user.Id">Add Friend</button>
    </li>
}
